# Application Configuration
PORT=5000
DEBUG=True

# Kafka Configuration
KAFKA_TOPIC_NAME=bigdata
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID=weather_group

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USERNAME=your_mongo_username
MONGO_PASSWORD=your_mongo_password
DB_NAME=weather_forecast

# Mongo Express Configuration (Optional - for database UI)
ME_CONFIG_MONGODB_SERVER=mongodb
ME_CONFIG_MONGODB_PORT=27017
ME_CONFIG_BASICAUTH_USERNAME=your_admin_username
ME_CONFIG_BASICAUTH_PASSWORD=your_admin_password
ME_CONFIG_MONGODB_ENABLE_ADMIN=true

# HDFS Configuration
# Set to 'false' to load models from local filesystem instead of HDFS
# HDFS scripts and code are kept for demonstration purposes
USE_HDFS=false
